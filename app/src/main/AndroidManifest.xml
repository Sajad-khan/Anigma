<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Anigma"
        tools:targetApi="31">
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.Anigma.NoActionbar"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".anigma.activities.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".anigma.activities.UserSignIn"
            android:exported="false"
            android:theme="@style/Theme.Anigma.NoActionbar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".anigma.activities.UserLogin"
            android:exported="false"
            android:theme="@style/Theme.Anigma.NoActionbar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".anigma.activities.Login"
            android:exported="false"
            android:theme="@style/Theme.Anigma.NoActionbar" />
        <activity
            android:name=".anigma.activities.SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Anigma.NoActionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".anigma.activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Anigma.Actionbar" />
    </application>

</manifest>